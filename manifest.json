{
  "manifest_version": 3,
  "name": "Local Markdown Viewer",
  "version": "1.0.2",
  "description": "ローカルのMarkdownファイルをGitHubスタイルで美しくプレビュー表示します（日本語のみ対応）",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "file:///*/*"
      ],
      "js": [
        "libs/marked.min.js",
        "libs/highlight.min.js",
        "libs/purify.min.js",
        "libs/mermaid.min.js",
        "libs/katex.min.js",
        "libs/auto-render.min.js",
        "content.js"
      ],
      "css": [
        "libs/highlight-github.min.css",
        "libs/katex.min.css"
      ],
      "run_at": "document_end"
    }
  ]
}
